{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar postagem</h4>
        <form action="/admin/postagens/edit" method="post">
            <input type="hidden" name="id" id="id" value="{{postagem._id}}">

            <label for="titulo">Titulo</label>
            <input type="text" required class="form-control" name="titulo" id="titulo" value="{{postagem.titulo}}">
            <label for="slug">Slug</label>
            <input type="text" required class="form-control" name="slug" id="slug" value="{{postagem.slug}}">
            <label for="desc">Descrição</label>
            <input type="text" required class="form-control" name="descricao" id="descricao"
                value="{{postagem.descricao}}">
            <label for="conteudo">Conteudo</label>
            <textarea name="conteudo" required class="form-control" id="conteudo" cols="30"
                rows="10">{{postagem.conteudo}}</textarea>
            <label for="categoria">Categoria</label>
            <select class="form-select" name="categoria" id="categoria">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <br><br>
            <button class="btn btn-success" type="submit">Criar Postagem</button>
        </form>
    </div>
</div>